{
  "name": "checkit",
  "version": "1.0.0",
  "description": "Biblioteca completa de validação brasileira com API REST",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:lib\"",
    "dev:api": "npm run dev --workspace=@checkit/api",
    "dev:lib": "npm run dev --workspace=@checkit/core",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "validation",
    "brazil",
    "cpf",
    "cnpj",
    "cep",
    "email",
    "typescript",
    "api"
  ],
  "author": "Gabriel Silva Martins & Gabriel Martins (shaw)",
  "license": "MIT"
}
